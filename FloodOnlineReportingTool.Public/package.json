{
  "name": "flood-online-reporting-tool-public",
  "version": "1.0.0",
  "description": "This is a web service to allow members of the public to report property level flooding for use by responders and lead local authorities.",
  "repository": "https://github.com/Dorset-Council-UK/FloodOnlineReportingTool.Public",
  "license": "OGL-UK-3.0",
  "main": "index.js",
  "scripts": {
    "bun:install": "bun install",
    "build": "bun run bun.build.ts --prod",
    "build:dev": "bun run bun.build.ts --dev",
    "watch": "bun run bun.build.ts --dev --watch",
    "audit": "bun audit",
    "outdated": "bun outdated",
    "lint": "bunx eslint",
    "prettier": "bunx prettier . --write",
    "watch:prettier": "bunx onchange \"Scripts/*.ts\" \"wwwroot/css/*.css\" -- prettier --write --ignore-unknown {{changed}}"
  },
  "author": "Dorset Council",
  "dependencies": {
    "maplibre-gl": "^5.4.0",
    "proj4": "^2.11.0"
  },
  "devDependencies": {
    "@types/bun": "1.3.4",
    "@types/node": "^20.11.16",
    "@types/proj4": "^2.5.5",
    "css-loader": "^6.10.0",
    "glob": "^11.0.1",
    "mini-css-extract-plugin": "^2.8.0",
    "sass": "^1.70.0",
    "sass-loader": "^14.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "-vs-binding": {
    "ProjectOpened": [
      "watch"
    ]
  },
  "private": true
}
